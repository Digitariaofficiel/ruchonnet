# ==============================================================

# Compression GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE application/ld+json
</IfModule>

# Cache du navigateur pour les performances
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Images
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    
    # CSS et JS
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/x-javascript "access plus 1 month"
    
    # Fonts
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    
    # HTML
    ExpiresByType text/html "access plus 1 day"
    
    # XML Sitemaps
    ExpiresByType application/xml "access plus 1 week"
    ExpiresByType text/xml "access plus 1 week"
</IfModule>

# Redirection vers HTTPS (SEO)
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Force HTTPS
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # Force WWW (optionnel - à activer si souhaité)
    # RewriteCond %{HTTP_HOST} !^www\.
    # RewriteRule ^(.*)$ https://www.%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # Redirections SEO friendly
    RewriteRule ^parking/?$ /#parking [R=301,L]
    RewriteRule ^occasions/?$ /#occasions [R=301,L]
    RewriteRule ^contact/?$ /#contact [R=301,L]
    RewriteRule ^services/?$ /#services [R=301,L]
</IfModule>

# Headers de sécurité pour le SEO
<IfModule mod_headers.c>
    # Security headers
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options SAMEORIGIN
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    
    # Cache headers pour les ressources statiques
    <FilesMatch "\.(ico|pdf|flv|jpg|jpeg|png|gif|webp|js|css|swf|woff|woff2)$">
        Header set Cache-Control "max-age=2592000, public"
    </FilesMatch>
    
    # Preload pour les ressources critiques
    Header add Link "</media/presentation.jpg>; rel=preload; as=image"
    Header add Link "<https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&family=Open+Sans:wght@400;500;600&display=swap>; rel=preload; as=style"
</IfModule>

# Pages d'erreur personnalisées
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html

# Types MIME pour SEO
<IfModule mod_mime.c>
    # JSON-LD pour les données structurées
    AddType application/ld+json .jsonld
    
    # Manifest
    AddType application/manifest+json .webmanifest
    
    # Fonts
    AddType font/woff .woff
    AddType font/woff2 .woff2
    
    # Images modernes
    AddType image/webp .webp
    AddType image/avif .avif
</IfModule>

# Optimisation pour les moteurs de recherche
<Files "robots.txt">
    Header set Cache-Control "max-age=86400, public"
</Files>

<Files "sitemap.xml">
    Header set Cache-Control "max-age=86400, public"
    Header set Content-Type "application/xml; charset=utf-8"
</Files>

# Blocage des bots indésirables (préservation du budget crawl)
<IfModule mod_rewrite.c>
    RewriteCond %{HTTP_USER_AGENT} (ahrefsbot|mj12bot|dotbot|spbot|semrushbot|blexbot) [NC]
    RewriteRule .* - [F,L]
</IfModule>

# Optimisation pour Core Web Vitals
<IfModule mod_headers.c>
    # Preconnect hints
    Header add Link "<https://fonts.googleapis.com>; rel=preconnect; crossorigin"
    Header add Link "<https://fonts.gstatic.com>; rel=preconnect; crossorigin"
    Header add Link "<https://cdn.tailwindcss.com>; rel=preconnect; crossorigin"
</IfModule>